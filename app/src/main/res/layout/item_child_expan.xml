<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/profile_bg"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/profile_bg"
        android:orientation="vertical"
        android:padding="4dp">


        <RelativeLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/profile_bg"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@id/imageView3"
                android:layout_toRightOf="@id/tvMoney"
                android:gravity="left"
                android:text="45 м."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/ivImage"
                app:srcCompat="@drawable/iv_service_money" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="3dp"
                android:layout_toLeftOf="@id/cbDeleteIntentions"
                android:layout_toRightOf="@id/ivImage"
                android:gravity="left"
                android:maxLines="2"
                android:paddingTop="2dp"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/tvMoney"
                app:srcCompat="@drawable/iv_service_time" />

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@id/ivMoney"
                android:gravity="left"
                android:text="1200 р."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:padding="3dp" />

            <CheckBox
                android:id="@+id/cbDeleteIntentions"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="false"
                android:layout_marginLeft="10dp"
                android:button="@drawable/checkbox"
                android:checked="false"
                android:foreground="?attr/selectableItemBackground"
                android:paddingLeft="10dp"
                android:textColorHighlight="#1C416D"
                android:textColorLink="#1C416D"
                app:useMaterialThemeColors="false" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/iv_line" />

    </LinearLayout>
</androidx.cardview.widget.CardView>